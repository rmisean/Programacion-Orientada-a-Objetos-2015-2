package C_Average;

import java.util.*;

public class Main {
	
	public static void main(String[] args) {
		
            try (Scanner sc = new Scanner(System.in)) {
                
                System.out.println("Ingrese los numeros (Para terminar ingrese el numero 9999): ");
                int x;
                int count = 0;
                int n = 0;
                while(sc.hasNext()){
                    x = sc.nextInt();
                    if(x != 9999){
                        n = n + x;
                        count++;
                    }else{
                        break;
                    }
                }
                int average = n/count;
                System.out.println(average);
            }
	}
	
}
